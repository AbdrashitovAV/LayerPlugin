                        </Expander.Header>

                        <Expander.Content>
                            <ItemsControl Margin="3"
                                          ItemsSource="{Binding Items}" 
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Center"
                                          ItemTemplateSelector="{StaticResource autocadObjectDataTemplateSelector}">
                            </ItemsControl>
                        </Expander.Content>

                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </ScrollViewer>
