<UserControl x:Class="LayerPlugin.Views.LineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:LayerPlugin.Views"
             xmlns:basicViews="clr-namespace:LayerPlugin.Views.BasicViews"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal"
                Margin="3">

        <basicViews:Label ObjectType ="Line"/>

        <basicViews:IsSelectedView DataContext="{Binding IsSelected}"/>
        <basicViews:CoordinateView DataContext="{Binding Line.Start }"/>
        <basicViews:CoordinateView DataContext="{Binding Line.End }"/>
        <basicViews:HeightView Height="{Binding Line.Height}"/>
    </StackPanel>
</UserControl>
